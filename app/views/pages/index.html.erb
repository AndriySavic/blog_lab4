<style type="text/css">
	.font1 {
		font: 12pt;
	}
	.font2 {
		font: 16pt sans-serif;
	}
</style>

<button type="button" class="btn">
<%= link_to "Create new post", new_post_path %>
</button>
<div>
<% @posts.each do |post| %><br />
<hr>
<h1><%= link_to post.title, post_path(post.id) %></h1>
<p><%= image_tag post.user.avatar.url, width: 50, heigth:50 %>

<p class="font2"><%= post.body %></p>
<p class="font1"> Author : <%= post.user.nickname %></p>
<p class="font1">Created at : <%= post.user.created_at %></p>
<% if current_user != nil and current_user.id == post.user_id %>
<p><%= link_to "Edit", edit_post_path(post.id) %>
 or 
 <%= link_to "Delete", post_path(post.id), data: {confirm: 'Are you sure?'}, method: :delete %></p>
<% end %>
<% end %>
</div>

